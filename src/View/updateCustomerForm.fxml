<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/11.0.2" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Controller.updateCustomerForm">
    <children>
        <Label layoutX="225.0" layoutY="30.0" text="Update Customer">
            <font>
                <Font size="24.0" />
            </font>
        </Label>
        <Label layoutX="25.0" layoutY="75.0" text="Customer ID">
            <font>
                <Font size="14.0" />
            </font>
        </Label>
        <Label layoutX="25.0" layoutY="125.0" text="Name">
            <font>
                <Font size="14.0" />
            </font>
        </Label>
        <Label layoutX="25.0" layoutY="175.0" text="Address">
            <font>
                <Font size="14.0" />
            </font>
        </Label>
        <Label layoutX="25.0" layoutY="225.0" text="Postal Code">
            <font>
                <Font size="14.0" />
            </font>
        </Label>
        <Label layoutX="25.0" layoutY="275.0" text="Phone">
            <font>
                <Font size="14.0" />
            </font>
        </Label>
        <TextField fx:id="custIDTF" alignment="CENTER" editable="false" layoutX="125.0" layoutY="75.0" />
        <TextField fx:id="custNameTF" alignment="CENTER" layoutX="125.0" layoutY="125.0" />
        <TextField fx:id="custAddressTF" alignment="CENTER" layoutX="125.0" layoutY="175.0" />
